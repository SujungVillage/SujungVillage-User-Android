<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_comm_detale_comment_border"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    android:paddingVertical="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_admin"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:background="@drawable/style_comm_listitem_admin_border"
            android:gravity="center"
            android:padding="3dp"
            android:text="관리자"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:visibility="gone"
            android:fontFamily="@font/medium"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="익명1"
            android:textColor="@color/black"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_cal_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/light"
        android:text="2022/07/13 20:46"
        android:textColor="#989898"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/light"
        android:text="그니까 나도 오늘 너무 시끄러웠어"
        android:textColor="@color/black"
        android:textSize="12dp" />
</LinearLayout>