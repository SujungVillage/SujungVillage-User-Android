<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="26dp"
    android:paddingEnd="20dp"
    android:paddingTop="18dp"
    android:paddingBottom="23dp"
    android:elevation="10dp"
    android:background="@drawable/style_comm_listitem_border"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_admin"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:background="@drawable/style_comm_listitem_admin_border"
            android:gravity="center"
            android:padding="3dp"
            android:text="관리자"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:visibility="gone"
            android:fontFamily="@font/medium"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:ellipsize="end"
            android:text="두루마리 휴지 나눔!"
            android:textSize="14dp"
            android:fontFamily="@font/semi_bold"
            android:textColor="#414141"
            android:maxLines="1" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2022-07-08"
            android:textSize="10dp"
            android:fontFamily="@font/regular"
            android:textColor="#A5A5A5" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:minLines="1"
        android:lines="2"
        android:layout_marginEnd="6dp"
        android:ellipsize="end"
        android:textSize="13dp"
        android:fontFamily="@font/regular"
        android:text="내가 쿠팡에서 휴지를 너무 많이 사서 원하는 사람 있으면 댓글 달아줘 나눠줄게."
        android:textColor="#6A6A6A"
        android:maxLines="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_comment_count"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12dp"
            android:fontFamily="@font/regular"
            android:text="0" />
    </LinearLayout>

</LinearLayout>