<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="10dp"
    android:background="@drawable/style_comm_listitem_border"
    android:layout_marginBottom="15dp"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_admin"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:background="@drawable/style_comm_listitem_admin_border"
            android:gravity="center"
            android:padding="3dp"
            android:text="관리자"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:fontFamily="@font/medium"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="두루마리 휴지 나눔!"
            android:textSize="14dp"
            android:fontFamily="@font/semi_bold"
            android:textColor="#414141" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="2022-07-08"
            android:textSize="10dp"
            android:fontFamily="@font/regular"
            android:textColor="#A5A5A5" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="13dp"
        android:fontFamily="@font/regular"
        android:text="내가 쿠팡에서 휴지 주문했는데 생각보다 너무 많아서
몇 개 나눔하려고 하는데 받을 사람들 댓글달 ..."
        android:textColor="#6A6A6A" />

</LinearLayout>