<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="47dp"
                android:fontFamily="@font/semi_bold"
                android:text="회원가입"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sign_up_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="65dp">

                <LinearLayout
                    android:id="@+id/linear_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="40dp"
                    android:paddingRight="42dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/semi_bold"
                        android:text="아이디"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edit_id"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_signup_unselected"
                            android:inputType="text"
                            android:maxLength="255"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="6dp"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text_id_overlap_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_weight="0"
                            android:background="@drawable/style_signup_button"
                            android:fontFamily="@font/regular"
                            android:padding="6dp"
                            android:text="중복확인"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_id_overlap_check_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/regular"
                        android:text="중복확인을 해주세요."
                        android:textColor="#FF0000"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="39dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/semi_bold"
                        android:text="비밀번호"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:background="@drawable/style_signup_unselected"
                        android:inputType="textPassword"
                        android:maxLength="255"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="39dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/semi_bold"
                        android:text="비밀번호 확인"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/edit_password_check"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:background="@drawable/style_signup_unselected"
                        android:inputType="textPassword"
                        android:maxLength="255"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_password_check_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="4dp"
                        android:text="비밀번호가 다릅니다."
                        android:textColor="#FF0000"
                        android:textSize="12dp"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/semi_bold"
                        android:orientation="horizontal"
                        android:textColor="@color/black"
                        android:textSize="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="29dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/semi_bold"
                                android:text="이름"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/edit_name"
                                android:layout_width="100dp"
                                android:layout_height="27dp"
                                android:background="@drawable/style_signup_unselected"
                                android:inputType="text"
                                android:maxLength="255"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="6dp"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/semi_bold"
                                android:text="전화번호"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edit_number1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/style_signup_unselected"
                                    android:inputType="number"
                                    android:maxLength="3"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="6dp"
                                    android:textSize="12sp" />

                                <ImageButton
                                    android:id="@+id/imageButton"
                                    android:layout_width="7dp"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_weight="0"
                                    android:background="@color/nothing"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/icon_signup_bar" />

                                <EditText
                                    android:id="@+id/edit_number2"
                                    android:layout_width="0dp"
                                    android:layout_height="27dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/style_signup_unselected"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="6dp"
                                    android:textSize="12sp" />

                                <ImageButton
                                    android:id="@+id/imageButton2"
                                    android:layout_width="7dp"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_weight="0"
                                    android:background="@color/nothing"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/icon_signup_bar" />

                                <EditText
                                    android:id="@+id/edit_number3"
                                    android:layout_width="0dp"
                                    android:layout_height="27dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/style_signup_unselected"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="6dp"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="39dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/semi_bold"
                                android:text="기숙사"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <Spinner
                                android:id="@+id/spinner_dormitory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/dormitory" />

                        </LinearLayout>

                        <View
                            android:layout_width="18dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/semi_bold"
                                android:text="기숙사 호실"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <EditText
                                android:id="@+id/edit_address"
                                android:layout_width="match_parent"
                                android:layout_height="27dp"
                                android:background="@drawable/style_signup_unselected"
                                android:hint="호실을 입력해주세요."
                                android:inputType="text"
                                android:maxLength="255"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="6dp"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="88dp"
                        android:layout_marginBottom="90dp"
                        android:background="@drawable/style_signup_submit"
                        android:fontFamily="@font/bold"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="15dp"
                        android:text="회원가입"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>